<div class="container-fluid take-a-look p-0">
    <h1 class="big-quote">HELP OTHERS:</h1>
</div>

<!--Request segment-->
<div class="container-fluid request-container">
    <div class="row row-cols-1 row-cols-md-3 mt-0 g-4">
        @if(Model.Requests.Count() == 1)
        {
            <div class="col mt-3 mb-3">
                <div class="card index-cards rounded-0">
                    <img src="/images/request.jpg" class="card-img-top rounded-0" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Requests.ElementAt(Model.Requests.Count() - 1).Title</h5>
                    </div>
                </div>
            </div>
        }
        else if(Model.Requests.Count() == 0)
        {

        }
        else
        {
            for(int i = Model.Requests.Count() - 1; i >= Model.Requests.Count() - 2; i--)
            {
                <div class="col mt-3 mb-3">
                    <div class="card index-cards rounded-0">
                        <img src="/images/request.jpg" class="card-img-top rounded-0" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Requests.ElementAt(i).Title</h5>
                        </div>
                    </div>
                </div>
            }
        }
        <div class="col request-tab mt-0">
            <h1 class="post-segment-header">REQUEST</h1>
            <p class="post-segment-text">or request for something from the community </p>
            <a class="post-button" asp-page="/Requests">View more</a>
        </div>
    </div>
</div>




