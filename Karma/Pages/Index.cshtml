@page
@using Karma.Models
@model IndexModel
@{ 
    ViewData["Title"] = "Home page";
}

<!--Landing page segment-->
<div class="container-fluid ">
    <div class="row row-custom">
        <div class="col-md-6 landing-page-right-column">
            <h1 class="landing-page-header"><i>Kar</i>ma</h1>
            <p class="landing-page-text">Where unused things find a new home</p>
        </div>
        <div class="col-md-6 landing-page-left-column">
            <img class="img-fluid landing-page-image" src="~/images/landing-page.jpg" />
        </div>
    </div>
</div>
<!--Take a look segment-->
<div class="container-fluid take-a-look p-0">
    <h1 class="big-quote">TAKE A LOOK:</h1>
</div>
<!--Post segment-->
<div class="container-fluid post-container">
    <div class="row row-cols-1 row-cols-md-3 mt-0 g-4">
        <div class="col post-tab mt-0">
            <h1 class="post-segment-header">POSTS</h1>
            <p class="post-segment-text">find amazing things people are giving away. </p>
            <a class="post-button" asp-page="/Submits">View more</a>
        </div>
        @if(Model.Submits.Count() == 1)
        {
            <div class="col mt-3 mb-3">
                <div class="card index-cards rounded-0">
                    <img src="/images/@Model.Submits.ElementAt(Model.Submits.Count() - 1).Picture" class="card-img-top rounded-0" alt="...">
                    <div class="card-body">
                        <a class="post-name" target="_self" asp-page="/Item" asp-route-id=@Model.Submits.ElementAt(Model.Submits.Count() - 1).Id>
                            <h5 class="card-title">@Model.Submits.ElementAt(Model.Submits.Count() - 1).Title</h5>
                        </a>
                    </div>
                </div>
            </div>
        }
        else if(Model.Submits.Count() == 0)
        {

        }
        else
        {
            //foreach(int i = Model.Submits.Count() - 1; i >= Model.Submits.Count() - 2; i--)
            foreach(var submit in Model.Submits.Take(3))
            {
                <div class="col mt-3 mb-3">
                    <div class="card index-cards rounded-0">
                        <img src="/images/@submit.Picture" class="card-img-top rounded-0" alt="...">
                        <div class="card-body">
                            <a class="post-name" target="_self" asp-page="/Item" asp-route-id=@submit.Id>
                                <h5 class="card-title">@submit.Title</h5>
                            </a>
                            <!--More button wont work in this function, need to research why. For now i deleted it-->
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
